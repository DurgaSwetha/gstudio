{
	"settings": {
		"index.mapping.total_fields.limit": 10000, 
		"number_of_shards": 5,
		"number_of_replicas": 2,
	        "index.mapping.ignore_malformed": true,
		"analysis": {
			"analyzer": {
				"trigram": {
					"type": "custom",
					"tokenizer": "standard",
					"stopwords": "_english_",
					"filter": [
						"standard",
						"lowercase",
						"shingle"
					],
					"char_filter": ["html_strip"]
				}
			},
			"filter": {
				"shingle": {
					"type": "shingle",
					"min_shingle_size": 2,
					"max_shingle_size": 3
				}
			}
		}
	},
	"mappings": {
		"triple": {		
			"properties": {
				"type":{
					"type":"keyword"
				},
				"name": {
					"type": "text",
					"fields": {
						"trigram": {
							"type": "text",
							"analyzer": "trigram"
						}
					}
				},
				"altnames":{
					"type": "text",
					"fields": {
						"trigram": {
							"type": "text",
							"analyzer": "trigram"
						}
					}
				},
				"content": {
					"type": "text",
					"fields": {
						"trigram": {
							"type": "text",
							"analyzer": "trigram"
						}
					}
				},
				"tags": {
					"type": "text",
					"fields": {
						"trigram": {
							"type": "text",
							"analyzer": "trigram"
						}
					}
				},
				"last_update":{
               				"type":"date",
			               "format":"dd/MM/yyyy HH:mm:ss:SSSSSS"
			        },
				"created_at":{
               				"type":"date",
			               "format":"dd/MM/yyyy HH:mm:ss:SSSSSS"
			        }
			}
		}
}
}